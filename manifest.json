{
  "manifest_version": 3,
  "name": "Cyberbullying Detector",
  "description": "Detects and blurs cyberbullying content on Twitter.",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://group9thesis.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["src/content.js"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "CyberSafe",
  "description": "Detects and blurs cyberbullying content on X (formerly known as Twitter).",
  "version": "1.1",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://group9thesis.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["src/content.js"]
    }
  ]
}
